post_install() { 
  # ensure that the shared directories are set up for tomcat
  sed -e '/common.loader=/i common.loader=${catalina.home}/lib,${catalina.home}/lib/*.jar,${catalina.home}/shared/classes' \
    -e '/common.loader=/d' \
   /etc/tomcat.d/catalina.properties > /tmp/tmp
  mv /tmp/tmp /etc/tomcat.d/catalina.properties
}

pre_upgrade() {
  # NOTE: These are just the "expanded" copies.
  rm -rf /srv/tomcat/webapps/{alfresco,share}
}

post_remove() {
  # NOTE: These are just the "expanded" copies.
  rm -rf /srv/tomcat/webapps/{alfresco,share}
}
